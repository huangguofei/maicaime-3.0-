			.pxrem(height, 36);
			.pxrem(line-height, 36);
			.pxrem(border-radius, 18);
			text-align: center;
			color: #4a4a4a;
		}
		header {
			border: 1px solid #e7e7e7;
			background: #fafafa;
			section {
				.clearfix();
				h4 {
					.pxrem(font-size, 36);
				}
				img {
					.pxrem(width, 46);
