 @import "../../../lib/less/config.less";
.news-page {
    .pull-left {
        float: left;
    }
    .pull-right {
        float: right;
    }
    .clearfix() {
        &:after {
            content: "";
            display: block;
            clear: both
        }
        zoom:1
    }
    .new-contents {
//      min-height: 800px;
        padding: 80px 20px 0 20px;
        font-size: 52px;
        text-align: center;
        color: #666;
        background: #292928;
        &>div {
            margin: 0 auto;
            h3 {
                color: #fff;
                text-align: left;
                font-size: 20px;
            }
            .news-list {
                margin-top: 10px;
                .news-item {
                    padding: 10px 0;
                    border-bottom: 1px solid #3E3836;
                    .clearfix();
                    img {
                        width: 100%;
                        height: 100px;
                    }
                    .news-right{
                        width: 100%;
                        text-align: left;
                         margin-top: 10px;
                    }
                    &>div {
                        h4 {
                            font-size: 20px;
                            color: #DBAB9A;
                        }
                        p {
                            font-size: 14px;
                            color: #8F908F;
                        }
                        .news-time{
                            margin:5px 0 10px 0 ;
                            
                        }
                        .news-content{
                            word-break: break-all;
                            word-wrap: break-word;
                        }
                        
                        a {
                            font-size: 16px;
                            border-radius: 20px;
                            padding: 0 30px;
                            display: inline-block;
                            background: #4F2E22;
                            color: #C9BFBC;
                            height:40px ;
                            line-height: 40px;
                        }
                    }
                }
            }
        }
    }
}