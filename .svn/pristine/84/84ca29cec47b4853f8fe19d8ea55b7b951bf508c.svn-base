@import "./config.less";
html,
body,
button,
dd,
dl,
dt,
fieldset,
form,
h1,
h2,
h3,
h4,
h5,
h6,
hr,
input,
legend,
li,
ol,
p,
pre,
td,
textarea,
th,
ul {
    margin: 0;
    padding: 0;
}
html,
body {
    font-family: 12px/1.5 PingFangHK-Light,arial,"微软雅黑","PingFangSC-Regular","SimHei","黑体","SimSun","宋体",Arial,sans-serif,sans-serif;
    width: 100%;
    height: 100%;
}
body{
	font-size:14px;
}
a {
    text-decoration: none;
     
}
li {
    list-style: none;
}
span,p,div,a,i,button,input,textarea{
    -webkit-tap-highlight-color:rgba(255,255,255,0)
}
#app{
	width:100%;
	height:100%;
}
/*左边主菜单-----------------------------------------------------------------------------------------*/
.el-menu-item-group__title a{
    color:#fff;
}
.el-menu-item.is-active a{
    color:#20a0ff !important
}
.el-submenu__title {
    font-size: @mSize1;
    color: @mColor1;
}
.is-opened .el-submenu__title a,
.is-opened .el-submenu__title {
    color: #20a0ff;
}
.el-menu-item-group__title {
    font-size: @mSize2;
    color: @mSize2;
}
.el-menu-item a {
    font-size: @mSize3;
    color: @mSize3;
}
.el-menu--dark{
    background: @mBack;
}
.el-menu--dark .el-submenu .el-menu{
    background: #515868;
}
.el-menu-item-group__title{
    padding-left:38px !important;
}
.el-submenu .el-menu-item-group .el-menu-item-group__title{
    margin-bottom:20px;

}
.el-submenu .el-menu-item{
    padding-left:58px !important;
    height:0px;
    line-height: normal;
    margin-bottom:38px;
    a{
        color:@mColor3;
    }
}
.el-submenu{
    .fight-icon{
         position: relative;
        top:8px;
        left:3px;
        display: inline-block;
        width:26px;
        height:28px;
    }
    .el-icon-staff{
        background-position:-32px -240px;
    }
    .el-icon-client{
        top:6px;
        background-position:-182px -237px;
    }
    .el-icon-sell{
        left:0;
         background-position:-78px -237px;
    }
    .el-icon-system{
        left:0;
        background-position:-129px -237px;
    }
    .el-icon-child{
        position: relative;
        top:-3px;
        left:3px;
        display: inline-block;
        width:8px;
        height:8px;
        border-left:1px solid rgba(255, 255, 255, 0.8);
        border-bottom:1px solid rgba(255, 255, 255, 0.8);
    }

}
.is-opened .el-submenu__title a, 
.is-opened .el-submenu__title{
    color:#FFF;
}
/*三级菜单*/
.el-menu-item a {
    color: #fff;
}
/*二级菜单*/
.el-menu-item-group__title {
    color: #fff;
}
/*一级菜单*/
.el-submenu__title a {
    color: #fff;
}
.el-menu-item {
    font-size: @mSize1;
    color: @mColor1;
}
/*左边主菜单 END--------------------------------------------------------------------------------------------------------------*/

/*面包屑*/
.el-breadcrumb {
    font-size: @breadSize;
    color: @breadColor;
}

/*页面级*/
.page-layer{
    padding: 20px;
}

/*查询区域*/
.search-wrap {
    background: @fillBack;
    padding: 10px;
    margin: 20px 0;
    border:1px solid @borderColor;
    .el-form-item__label{
        font-size:14px;
    }
    .el-form-item{
        margin:0;
    }
    .s-right{
        float:right;
    }
    .el-input__inner{
        width:100%;
    }
}

/*按钮组------------------------------------------------------------*/
.btn-add{
   .btnAddBack(0);
}
.btn-add:hover{
   .btnAddBack(6.5%);
}

/*按钮组-END------------------------------------------------------------*/