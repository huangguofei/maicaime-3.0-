.product-page{
	background:#000;
	.prod-wrap{
		padding:175px 0;
		clear:both;
		border-bottom:1px solid #333;
		.p-item{
			float:left;
			width:25%;
			height:320px;
			color:#eee;
			text-align: center;
			a{
				color:#FFF;
			}
			.pro-img{
				height:240px;
				text-align: center;
				display: table-cell;
				vertical-align: middle;
				display:-webkit-box; 
				-webkit-box-pack: center; 
				-webkit-box-align: center; 
				img{
					max-width:80%;
					max-height:80%;
					vertical-align: middle;
				}
			}
			.pro-img:hover{
				img{
					max-width:90%;
					max-height:90%;
				}
			}
			.en{
				font-size:16px;
			}
			.zh{
				font-size:18px;
			}
		}
		
	}

}