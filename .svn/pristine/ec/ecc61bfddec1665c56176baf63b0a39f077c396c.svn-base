@import "./config.less";
html,
body,
button,
dd,
dl,
dt,
fieldset,
form,
h1,
h2,
h3,
h4,
h5,
h6,
hr,
input,
legend,
li,
ol,
p,
pre,
td,
textarea,
th,
ul {
    margin: 0;
    padding: 0;
}
html,
body {
    font-family: 12px/1.5 PingFangHK-Light,arial,"微软雅黑","PingFangSC-Regular","SimHei","黑体","SimSun","宋体",Arial,sans-serif,sans-serif;
    width: 100%;
    height: 100%;
}
body{
	font-size:@size-detail;
    background: @back-page;
}
a {
    text-decoration: none;
     
}
li {
    list-style: none;
}
span,p,div,a,i,button,input,textarea{
    -webkit-tap-highlight-color:rgba(255,255,255,0)
}
#app{
	width:100%;
	height:100%;
}

/*页面级*/
.page-layer{
    padding:0 20px;
}

/*查询区域*/
.search-wrap {
   padding-bottom: 20px;
}

/*按钮组------------------------------------------------------------*/
.btn-add{
   .btnAddBack(0);
}
.btn-add:hover{
   .btnAddBack(6.5%);
}
