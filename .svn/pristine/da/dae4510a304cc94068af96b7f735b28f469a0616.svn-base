@import "./config.less";
html,
body,
button,
dd,
dl,
dt,
fieldset,
form,
h1,
h2,
h3,
h4,
h5,
h6,
hr,
input,
legend,
li,
ol,
p,
pre,
td,
textarea,
th,
ul {
    margin: 0;
    padding: 0;
}

html,
body {
    font-family: 12px/1.5 PingFangHK-Light, arial, "微软雅黑", "PingFangSC-Regular", "SimHei", "黑体", "SimSun", "宋体", Arial, sans-serif, sans-serif;
    width: 100%;
    height: 100%;
}

body {
    .pxrem(font-size, 26);
    background: @m-back;
}

a {
    text-decoration: none;
}

li {
    list-style: none;
}

span,
p,
div,
a,
i,
button,
input,
textarea {
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
}

#app,
.page-layer {
    width: 100%;
    min-height: 100%;
}
.page-layer{
     -webkit-overflow-scrolling: touch;
}
.footer-page{
    .pxrem(padding-bottom, 110)
}
input[type=text] {
    -webkit-text-security: disc;
}


/*提示框*/

.message-fixed {
    position: fixed;
    z-index: 10000;
    width: 100%;
    top: 50%;
    left: 0;
    margin-top: -50px;
    .layer {
        position: fixed;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2);
    }
    .m-content {
        text-align: center;
        padding: 0 20px;
        .mes {
            display: inline-block;
            background: rgba(0, 0, 0, 0.5);
            color: #FFF;
            padding: 10px 20px;
            border-radius: 8px;
        }
    }
    .a-fade-in {
        animation: messageFadeIn 1s ease 0s 1;
    }
    .a-fade-out {
        animation: messageFadeOut 1s ease 0s 1;
    }
}


/*显隐公共类*/

.hide {
    display: none;
}

.show {
    display: initial;
}


/*登录注册表单样式*/

.from-item {
    text-align: center;
    margin: .3rem 0;
    img {
        vertical-align: middle;
        .pxrem(width, 32);
    }
    input[name] {
        width: calc(100% - 16px);
        border: 0;
        border-bottom: 2px solid #f0f0f0;
        outline: none;
        color: @p-t-c;
        padding: .08rem 0;
        .pxrem(font-size, 32);
        .pxrem(margin-left, 10);
    }
    input[type=button] {
        margin: .5rem 0 0;
        border: 0;
        background: #46c895;
        color: #fff;
        width: 100%;
        .pxrem(font-size, 36);
        .pxrem(border-radius, 44);
        .pxrem(height, 88);
    }
    a {
        color: #666666;
        .pxrem(font-size, 32);
    }
    
}